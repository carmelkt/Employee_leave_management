                    <label for="txtName">EmployeeID</label>
                    <input type="text" class="form-control" id="txtName" placeholder="Enter EmployeeID" name="EmployeeID" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="txtName">Leave Start Date</label>
                    <input type="datetime" class="form-control" id="txtName" placeholder="Enter Leave Start Date" name="LeaveStartDate" />
                </div>

                <div class="form-group col-sm-6">
                    <label for="txtName">Leave End Date</label>
                    <input type="datetime" class="form-control" id="txtName" placeholder="Enter Leave End Date" name="LeaveEndDate" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="txtName">Cause(s)</label>
                    <input type="text" class="form-control" id="txtName" placeholder="Type your request here" name="RequestText" />
                </div>
            </div>




            <div class="form-row">



