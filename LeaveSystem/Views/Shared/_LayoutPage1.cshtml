@using System.Web.Optimization
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - YourCompany</title>
    @Styles.Render("~/Styles/bootstrap")
    @Styles.Render("~/Styles/site")
    @Scripts.Render("~/Scripts/bootstrap")

</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-sm text-light navbar-light">
            <a class="navbar-brand" href="#">Leave System</a>



            <button class="navbar-toggler" data-toggle="collapse" data-target="#collapsibleNavBar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavBar">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/home/index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/contact">Contact</a>
                    </li>
                    @if (Session["CurrentUserName"] != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/home/departments">Departments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/home/employees">Employees</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/home/roles">Roles</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" href="/account/LeaveRequest">Leave</a>
                    </li>


                    @if (Session["CurrentUserName"] == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/account/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/account/register">Register</a>
                        </li>
                    }
                    @if (Session["CurrentUserName"] != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/account/logout">Logout-@Session["CurrentUserName"].ToString().ToUpper()-@Session["CurrentUserID"]</a>

                        </li>
                    }
                </ul>
            </div>
            <form class="form-inline" action="/home/search">
                <input type="search" class="form-control mr-sm-2" style="width:150px" placeholder="Search" name="str">
                <button class="btn btn-success">Search</button>
            </form>
        </nav>      
            @RenderBody()
    </div>
    
</body>
</html>
